{{ if eq .chezmoi.os "linux" -}}
#!/usr/bin/env bash

set -eufo pipefail

if command -v apt-get >/dev/null; then
  sudo apt install -y git unzip wget
elif command -v yum >/dev/null; then
  sudo yum -q -y install git python3 python3-pip unzip wget
else
  echo "This is not an apt or rpm based Linux system ..."
fi

{{ end -}}
