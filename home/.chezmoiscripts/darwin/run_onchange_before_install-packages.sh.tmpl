#!/bin/bash

set -eufo pipefail

# brew tap homebrew/cask-fonts  # Deprecated

{{ $brews := list
     "age"
     "bat"
     "coreutils"
     "curl"
     "diff-so-fancy"
     "git"
     "gopass"
     "jq"
     "lsd"
     "pinentry-mac"
     "ripgrep"
     "virtualenvwrapper"
     "vivid"
     "wget"
     "xz"
     "yt-dlp" -}}
{{ $casks := list
     "font-hack-nerd-font"
     "rar" -}}

{{ if eq .chezmoi.arch "amd64" -}}
{{   $brews = concat $brews (list
       "shellcheck") -}}
{{   $casks = concat $casks (list
       "virtualbox") -}}
{{ end -}}

{{ if .personal -}}
{{   $brews = concat $brews (list
       "kubectx"
       "kubernetes-cli") -}}
{{   $casks = concat $casks (list
       "rectangle") -}}
{{ end -}}

brew bundle --file=/dev/stdin <<EOF
{{ range ($brews | sortAlpha | uniq) -}}
brew "{{ . }}"
{{ end -}}
{{ range ($casks | sortAlpha | uniq) -}}
cask "{{ . }}"
{{ end -}}
EOF
